<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".InfoActivity" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_weight="0.71"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvInfoFirstName"
				style="@style/textTitle1" />
                

            <TextView
                android:id="@+id/tvInfoLastName"
				style="@style/textTitle1" />

            <TextView
                android:id="@+id/tvInfoBirthday"
                android:drawableRight="@drawable/icon_birthday"
                android:text="Brithday" 
                style="@style/textTitle2" 
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.71"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgInfoPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/tvInfoCar"
                android:drawableLeft="@drawable/icon_car"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Car" 
                style="@style/textDate" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvInfoStreetPostalAdress"
            android:drawableLeft="@drawable/icon_home"
            android:text="Adresse" 
            style="@style/textDesc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvInfoCodePostalAdress"
                android:text="Codepostal" 
                style="@style/textDesc" />

            <TextView
                android:id="@+id/tvInfoCityPostalAdress"
                android:text="City" 
				style="@style/textDesc" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tvInfoPhoneNumber"
            android:drawableLeft="@drawable/icon_phone"
            android:text="Phone number" 
            style="@style/textDesc" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvInfoEmail"
            android:drawableLeft="@drawable/icon_email"
            android:text="Email" 
            style="@style/textDesc" />

        <TextView
            android:id="@+id/tvInfoSkype"
            android:drawableLeft="@drawable/icon_skype"
            android:text="Skype" 
            style="@style/textDesc" />

        <TextView
            android:id="@+id/tvInfoTwitter"
            android:drawableLeft="@drawable/icon_twitter"
            android:text="Twitter" 
            style="@style/textDesc" />
        <TextView
            android:id="@+id/tvInfoViadeo"
            android:drawableLeft="@drawable/icon_viadeo"
            android:text="Viadeo" 
            style="@style/textDesc" />

    </LinearLayout>

</LinearLayout>