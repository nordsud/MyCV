<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvExpertiseName"
            android:text="Name" 
            android:layout_width="wrap_content"
            style="@style/textTitle1"/>

		<TextView
            android:id="@+id/tvExpertiseLevel"
            android:text="Level" 
            style="@style/textDate"/>        

    
	</LinearLayout>
        <TextView
            android:id="@+id/tvExpertiseType"
            android:text="Type" 
            style="@style/textTitle3"/>

	    <TextView
	        android:id="@+id/tvExpertiseHowlearnt"
	        style="@style/textDesc"
	        android:text="How ..." />

	
</LinearLayout>
     